# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sfoc-dashboard?retryWrites=true&w=majority

# Twilio WhatsApp Configuration (Choose one option)
# Option 1: Twilio API
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Option 2: WhatsApp Business API (configure separately)
WHATSAPP_BUSINESS_ID=your_business_id
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token

# Email Config
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Strava Config
STRAVA_CLIENT_ID=your_client_id
STRAVA_CLIENT_SECRET=your_client_secret
STRAVA_REDIRECT_URI=http://localhost:5000/api/strava/callback
FRONTEND_URL=http://localhost:5173
